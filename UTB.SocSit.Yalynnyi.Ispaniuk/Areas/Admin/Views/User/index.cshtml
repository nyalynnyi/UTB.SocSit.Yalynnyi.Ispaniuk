@model IList<UTB.SocSit.Yalynnyi.Ispaniuk.Infrastructure.Identity.User>
@{
    ViewData["Title"] = "All Users";
}
<h2>@ViewData["Title"]</h2>
<br />
@{
    if (Model != null && Model.Count > 0)
    {
        foreach (var item in Model)
        {
            <table class="table table-responsive table-striped table-bordered" style="width: 100%;">
                <thead>
                    <tr>
                        <th class="col-sm-1">ID</th>
                        <th class="col-sm-1">Email</th>
                        <th class="col-sm-1">Name</th>
                        <th class="col-sm-2">Username</th>
                        <th class="col-sm-1">Photo</th>
                        <th class="col-sm-3">Bio</th>
                        <th class="col-sm-1">Birthday</th>
                        <th class="col-sm-1">Updated</th>
                        <th class="col-sm-1">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td class="col-sm-1">@item.Id</td>
                        <td class="col-sm-1">@item.Name</td>
                        <td class="col-sm-1">@item.Email</td>
                        <td class="col-sm-2">@item.UserName</td>
                        <td class="col-sm-1">@item.Photo</td>
                        <td class="col-sm-3">@item.Bio</td>
                        <td class="col-sm-1">@item.Birthday</td>
                        <td class="col-sm-1">@item.Updated</td>
                        <td class="col-sm-1">
                            <form method="user" asp-action="Delete" asp-route-id="@item.Id" onsubmit="return confirm('Are you sure you want to delete this user?');">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-danger">Delete</button>
                            </form>
                        </td>
                    </tr>
                </tbody>
            </table>
        }
    }
    else
    {
        <h2>Posts are empty!</h2>
    }
}