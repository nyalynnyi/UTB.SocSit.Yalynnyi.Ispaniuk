@{
ViewData["Title"] = "Feed";
}
@{
    bool admin = ViewBag.Admin ?? false;
}
<link rel="stylesheet" href="~/css/intro.css" />
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
</head>

<!-- Верхній рядок, що займає всю ширину екрану -->
<div class="w-100 bg-dark text-white py-2 px-4">
    <div class="d-flex justify-content-between align-items-center w-100">
        <!-- Логотип-кнопка -->
        <a href="#" class="d-inline-block">
            <img src="~/img/network.png" alt="Logo" class="logo-btn" />
        </a>

        <!-- Feed як кнопка -->
        <a href="#" class="text-white text-decoration-none">
            <h2 class="m-0">Feed</h2>
        </a>

        <!-- Поле пошуку з обмеженою шириною -->
        <input type="text" class="form-control search-input" placeholder="Search..." />
    </div>
</div>


<div class="container-fluid">
    <div class="row">
        <!-- Ліва панель меню -->
        <div class="col-md-2 bg-light py-4">
            <ul class="nav flex-column">
                <li class="nav-item mb-2">
                    <a asp-controller="Profile" asp-action="Index" class="nav-link text-dark">
                        <i class="bi bi-house-door"></i> My profile
                    </a>
                </li>
                <li class="nav-item mb-2">
                    <a href="#" class="nav-link text-dark"><i class="bi bi-heart"></i> Followings</a>
                </li>
                <li class="nav-item mb-2">
                    <a href="#" class="nav-link text-dark"><i class="bi bi-newspaper"></i> Feed</a>
                </li>
                <li class="nav-item mb-2">
                    <a href="#" class="nav-link text-dark"><i class="bi bi-bookmark"></i> Saved posts</a>
                </li>
                <li class="nav-item mb-2">
                    <a href="#" class="nav-link text-dark"><i class="bi bi-images"></i> My photos</a>
                </li>
                <li class="nav-item mb-2">
                    <a href="#" class="nav-link text-dark"><i class="bi bi-camera-video"></i> My videos</a>
                </li>
                <li class="nav-item mb-2">
                    <a href="#" class="nav-link text-dark" data-bs-toggle="modal" data-bs-target="#newPostModal">
                        <i class="bi bi-plus-square"></i> New post
                    </a>
                </li>
                <div class="modal fade" id="newPostModal" tabindex="-1" aria-labelledby="newPostModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="newPostModalLabel">Create New Post</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <form method="post" enctype="multipart/form-data">
                                    <div class="mb-3">
                                        <label for="postText" class="form-label">Post Text</label>
                                        <textarea class="form-control" id="postText" name="postText" rows="3" placeholder="Write something..."></textarea>
                                    </div>
                                    <div class="mb-3">
                                        <label for="postImage" class="form-label">Upload Image</label>
                                        <input class="form-control" type="file" id="postImage" name="postImage" accept="image/*">
                                    </div>
                                </form>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                <button type="submit" class="btn btn-primary">Post</button>
                            </div>
                        </div>
                    </div>
                </div>
                <li class="nav-item mt-4">
                    <a href="#" class="nav-link text-dark"><i class="bi bi-gear"></i> Settings</a>
                </li>
                <li class="nav-item">
                    <a asp-controller="Account" asp-action="Logout" class="nav-link text-dark">
                        <i class="bi bi-box-arrow-right"></i> Log out
                    </a>
                </li>
                @if (User.Identity.IsAuthenticated == true && ViewBag.Admin)
                {
                    <li class="nav-item mt-4">
                        <a class="nav-link text-dark" asp-area="Admin" asp-controller="User" asp-action="Index">All users</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="Admin" asp-controller="Post" asp-action="Index">All posts</a>
                    </li>
                }
            </ul>
        </div>

        <!-- Головна частина: Стрічка -->
        <div class="col-md-6 py-4">
            @if (Model.Posts != null && Model.Posts.Count > 0 &&
            Model.UsersList != null && Model.UsersList.Count > 0)
            {
                foreach (var post in Model.Posts)
                {
                    foreach (var author in Model.UsersList)
                    {
                        if (Model.Names.Contains(author.UserName))
                        {
                            <div class="card mb-4" style="padding: 2%">
                                <!-- Header -->
                                <div class="card-header d-flex align-items-center">
                                    <img src=@author.Photo class="rounded-circle me-2" alt="Profile Picture" />
                                    <div>
                                        <strong>@author.Name</strong>
                                        <div class="text-muted">@author.UserName</div>
                                        <div class="text-muted">@($"{@post.Created:dd-MM-yyyy, HH:mm}")</div>
                                    </div>
                                </div>

                                @if (Model.MediaList != null && Model.MediaList.Count > 0)
                                {
                                    foreach (var list in Model.MediaList)
                                    {
                                        foreach (var media in list)
                                        {
                                            if (media.PostID == post.ID)
                                            {
                                                <!-- Placeholder для фото -->
                                                <div class="d-flex justify-content-left align-items-left" style="height: 500px;">
                                                    <img src=@media.Link alt="post" style="height: 500px" />
                                                </div>
                                            }
                                        }
                                    }
                                }
                                <!-- Post Text -->
                                <div class="mt-3"><strong>@author.Name: </strong>@post.Text</div>

                                <!-- Comment Section -->
                                <div class="comment-section">
                                    <h6 class="mt-2">Comments</h6>
                                    <!-- List of comments -->
                                    @if (Model.CommentsList != null && Model.CommentsList.Count > 0)
                                    {
                                        foreach (var commentList in Model.CommentsList)
                                        {
                                            foreach (var comment in commentList)
                                            {
                                                foreach (var user in Model.UsersList)
                                                {
                                                    if (comment.PostID == post.ID && comment.UserID == user.Id)
                                                    {
                                                        <div class="text-muted">@user.Name: @comment.Text</div>
                                                    }
                                                }
                                            }
                                        }
                                    }

                                    <!-- Input for comments -->
                                    <textarea id="commentInput" class="form-control mb-2" placeholder="Write your comment..."></textarea>
                                    <button class="btn btn-secondary" onclick="submitComment()">Submit Comment</button>
                                </div>

                                <div class="d-flex justify-content-between align-items-center mt-2">
                                    <!-- Left Block (Like and Comment) -->
                                    <div class="d-flex gap-3">
                                        <button class="btn btn-light border d-flex align-items-center">
                                            <i class="bi bi-hand-thumbs-up me-1"></i> Like
                                        </button>
                                        <button class="btn btn-light border d-flex align-items-center">
                                            <i class="bi bi-chat me-1"></i> Comment
                                        </button>
                                    </div>

                                    <!-- Save Button -->
                                    <button class="btn btn-light border d-flex align-items-center">
                                        <i class="bi bi-bookmark me-1"></i> Save
                                    </button>
                                </div>
                            </div>
                        }
                    }
                }
            }
        </div>

        <!-- Права панель: друзі -->
        <div class="col-md-4 bg-light py-4">
            @if (Model.Follows != null && Model.Follows.Count > 0)
            {
                <h5 class="mb-3">My Friends</h5>
                <ul class="list-unstyled">
                    @foreach (var follow in Model.Follows)
                    {
                        <li class="d-flex align-items-center mb-3">
                            <img src="@(!string.IsNullOrEmpty(follow.Photo) ? follow.Photo : "/img/photos/default.png")"
                                 class="rounded-circle me-2"
                                 alt="fp"
                                 style="height: 40px; width: 40px" />
                            <span>@follow.Name</span>
                        </li>
                    }
                </ul>
            }
            else
            {
                <h5 class="mb-3">You don’t have any real friends yet. Here some good ones:</h5>
                <ul class="list-unstyled">
                    <li class="d-flex align-items-center mb-3">
                        <img src="https://via.placeholder.com/40" class="rounded-circle me-2" alt="Friend" />
                        Albert Einstein
                    </li>
                    <li class="d-flex align-items-center mb-3">
                        <img src="https://via.placeholder.com/40" class="rounded-circle me-2" alt="Friend" />
                        Nikola Tesla
                    </li>
                    <li class="d-flex align-items-center mb-3">
                        <img src="https://via.placeholder.com/40" class="rounded-circle me-2" alt="Friend" />
                        Florence Nightingale
                    </li>
                    <!-- Додай інших друзів -->
                </ul>
            }
        </div>
    </div>
</div>
