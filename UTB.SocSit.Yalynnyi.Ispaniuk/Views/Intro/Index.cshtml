@{
    ViewData["Title"] = "Feed";
}
<link rel="stylesheet" href="~/css/intro.css" />
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
</head>


<div class="button-container">
    <li class="nav-item">
        <a class="nav-link text-white custom-button" asp-area="Security" asp-controller="Account" asp-action="Register">
            <i class="bi bi-person-plus"></i> Register
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-white custom-button" asp-area="Security" asp-controller="Account" asp-action="Login">
            <i class="bi bi-lock"></i> Login
        </a>
    </li>
</div>

<style>
    /* Контейнер для кнопок, що центрує їх по вертикалі та горизонталі */
    .button-container {
        display: flex;
        justify-content: center; /* Центрує кнопки по горизонталі */
        align-items: center; /* Центрує кнопки по вертикалі */
        height: 100vh; /* Висота контейнера на всю висоту вікна */
        flex-direction: column; /* Розташування кнопок вертикально */
    }

    .custom-button {
        background-color: #6a0dad; /* Фіолетовий колір */
        border-radius: 5px;
        padding: 8px 16px;
        transition: background-color 0.3s;
        display: inline-block;
        text-align: center;
        width: auto; /* Дозволяє кнопці бути компактнішою */
        max-width: 200px; /* Максимальна ширина кнопки */
        margin: 10px 0; /* Додає відступ між кнопками */
    }

    .custom-button:hover {
        background-color: #9b4f96; /* Світліший фіолетовий для ефекту наведеня */
    }

    .nav-link.text-white {
        color: white !important;
    }

    .nav-item {
        margin-bottom: 10px;
    }
</style>
