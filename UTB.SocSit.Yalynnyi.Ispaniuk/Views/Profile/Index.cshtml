@using UTB.SocSit.Yalynnyi.Ispaniuk.Controllers
@model CompositeModel
@{
ViewData["Title"] = "Profile";
}
<link rel="stylesheet" href="~/css/profile.css" />
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
</head>

<!-- Верхній рядок, що займає всю ширину екрану -->
<div class="w-100 bg-dark text-white py-2 px-4">
    <div class="d-flex justify-content-between align-items-center w-100">
        <!-- Логотип-кнопка -->
        <a href="#" class="d-inline-block">
            <img src="~/img/network.png" alt="Logo" class="logo-btn" />
        </a>

        <!-- Назва сторінки -->
        <a href="#" class="text-white text-decoration-none">
            <h2 class="m-0">My profile</h2>
        </a>

        <!-- Поле пошуку з обмеженою шириною -->
        <input type="text" class="form-control search-input" placeholder="Search..." />
    </div>
</div>

<div class="container-fluid">
    <div class="row">
        <!-- Ліва панель меню -->
        <div class="col-md-2 bg-light py-4">
            <ul class="nav flex-column">
                <li class="nav-item mb-2">
                    <a href="#" class="nav-link text-dark"><i class="bi bi-house-door"></i> My profile</a>
                </li>
                <li class="nav-item mb-2">
                    <a href="#" class="nav-link text-dark"><i class="bi bi-heart"></i> Followings</a>
                </li>
                <li class="nav-item mb-2">
                    <a asp-controller="Feed" asp-action="Index" class="nav-link text-dark">
                        <i class="bi bi-newspaper"></i> Feed
                    </a>
                </li>
                <li class="nav-item mb-2">
                    <a href="#" class="nav-link text-dark"><i class="bi bi-bookmark"></i> Saved posts</a>
                </li>
                <li class="nav-item mb-2">
                    <a href="#" class="nav-link text-dark"><i class="bi bi-images"></i> My photos</a>
                </li>
                <li class="nav-item mb-2">
                    <a href="#" class="nav-link text-dark"><i class="bi bi-camera-video"></i> My videos</a>
                </li>
                <li class="nav-item mb-2">
                    <a href="#" class="nav-link text-dark"><i class="bi bi-plus-square"></i> New post</a>
                </li>
                <li class="nav-item mt-4">
                    <a href="#" class="nav-link text-dark"><i class="bi bi-gear"></i> Settings</a>
                </li>
                <li class="nav-item">
                    <a asp-controller="Account" asp-action="Logout" class="nav-link text-dark">
                        <i class="bi bi-box-arrow-right"></i> Log out
                    </a>
                </li>
            </ul>
        </div>

        <!-- Головна частина: Профіль -->
        <div class="col-md-10 py-4">
            <div class="d-flex align-items-center mb-4">
                <img src="https://via.placeholder.com/100" class="rounded-circle me-3" alt="Profile Picture" />
                <div>
                    <h3 class="mb-0">@Model.User.Name</h3>
                    <p class="text-muted">@Model.User.UserName</p>
                    <p class="text-muted">@($"{@Model.User.Birthday:dd-MM-yyyy}")</p>
                    <button class="btn-sm btn-light border p-2 d-flex align-items-center">
                        Edit profile
                    </button>
                </div>
            </div>

            <p>@Model.User.Bio</p>
            @{
                if (Model.Posts != null && Model.Posts.Count > 0)
                {
                    foreach (var item in Model.Posts)
                    {
                    <div>
                        <!-- Placeholder для фото -->
                        <div class="bg-secondary text-white d-flex justify-content-center align-items-center" style="height: 300px;">
                            Image
                        </div>

                        <div class="d-flex justify-content-between align-items-center mt-2">
                            <!-- Лівий блок (Like і Comment) -->
                            <div class="d-flex gap-3">
                                <button class="btn btn-light border d-flex align-items-center">
                                    <i class="bi bi-hand-thumbs-up me-1"></i> Like
                                </button>
                                <button class="btn btn-light border d-flex align-items-center">
                                    <i class="bi bi-chat me-1"></i> Comment
                                </button>
                            </div>

                            <!-- Save кнопка -->
                            <button class="btn btn-light border d-flex align-items-center">
                                <i class="bi bi-bookmark me-1"></i> Save
                            </button>
                        </div>

                        <!-- Post -->
                        <p class="mt-3"><strong>@Model.User.Name: </strong>@item.Text</p>
                        <p class="text-muted">@item.Created</p>

                        <!-- Comments -->
                        @{
                            if (Model.CommentList != null && Model.CommentList.Count > 0)
                            {
                                foreach (var list in Model.CommentList)
                                {
                                    foreach (var comment in list)
                                    {
                                        foreach (var user in Model.UsersList)
                                        {
                                            if (@comment.PostID == item.ID && @user.Id == comment.UserID)
                                            {
                                                <p class="text-muted">@user.Name: @comment.Text</p>
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    </div>
                    }
                }
            }
        </div>
    </div>
</div>

